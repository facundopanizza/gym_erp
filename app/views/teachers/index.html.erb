<% content_for :heading, "Profesores" %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>DNI</th>
      <th>Número de teléfono</th>
      <th>Fecha de Nacimiento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.dni %></td>
        <td><%= teacher.phone_number %></td>
        <td><%= teacher.birthday %></td>
        <td><%= link_to 'Ver', teacher %></td>
        <td><%= link_to 'Editar', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Eliminar', teacher, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>