
<%= simple_form_for(@client) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="mb-3">
      <%= f.input :first_name %>
    </div>

    <div class="mb-3">
      <%= f.input :last_name %>
    </div>

    <div class="mb-3">
      <%= f.input :email %>
    </div>

    <div class="mb-3">
      <%= f.input :dni %>
    </div>

    <div class="mb-3">
      <%= f.input :phone_number %>
    </div>

    <div class="mb-3">
      <div class="form-label">
        <label>Ficha MÃ©dica</label>
      </div>
      <%= f.file_field :medic_file, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.input :birthday, start_year: 1900, end_year: Time.now.year, order: [ :day, :month, :year ]%>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary me-3" %>
    <%= link_to 'Atras', clients_path, class: "btn btn-secondary" %>
  </div>
<% end %>
